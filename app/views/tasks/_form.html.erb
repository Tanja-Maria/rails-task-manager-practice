<%= form_with(model: @task, local: true, html: { class: "task-form" }) do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-input" %>
</div>

<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-input" %>
</div>

  <% if task.persisted? %>
  <div class="form-group checkbox-group">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <% end %>

  <% if task.persisted? %>
  <div class="form-group">
    <%= f.submit "Update task", class: "form-submit" %>
  </div>
  <% else %>
  <div class="form-group">
    <%= f.submit "Create task", class: "form-submit" %>
  </div>
  <% end %>


<% end %>
